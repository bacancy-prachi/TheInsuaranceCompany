      <h2><%= pluralize(quotation.errors.count, "error") %> prohibited this quotation from being saved:</h2>

      <ul>
      <% quotation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="form-group row">
    <%= form.label :email , class: "col-sm-2 col-form-label"%>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :first_name, class: "col-sm-2 col-form-label"%>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :postal_code, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :city, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :phone, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :province, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :province, class: "form-control" %>
  </div>

  <div class="form-group row">
